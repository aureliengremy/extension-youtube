{
  "description": "Change layout from particular element",
  "manifest_version": 2,
  "name": "Youtube-layout",
  "version": "0.0.0.1",
  "icons": {
    "48": "icons/icon48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["layout.js"]
    }
  ],

  "permissions": ["activeTab"],

  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  }
}
